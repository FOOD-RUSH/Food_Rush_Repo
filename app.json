{
  "expo": {
    "name": "Food rush",
    "slug": "food-rush",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Foodrushlogo.png",
    "scheme": "foodrush",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/SplashScreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#06102b"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "background-processing",
          "remote-notification"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to show nearby restaurants and provide accurate delivery services.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby restaurants and calculate delivery times.",
        "NSUserNotificationUsageDescription": "This app uses notifications to update you about your orders and special offers."
      }
    },
    "android": {
      "package": "com.mrcalculus.foodrush",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Foodrushlogo.png",
        "backgroundColor": "#06102b"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },

    "assetBundlePatterns": ["assets/fonts/*", "assets/images/*"],
    "plugins": [
      "expo-font",
      "expo-asset",
      "expo-web-browser",
      "expo-secure-store",
      "expo-localization",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to your location to show nearby restaurants and provide accurate delivery services.",
          "locationAlwaysPermission": "This app needs access to your location to show nearby restaurants and provide delivery services even when the app is in the background.",
          "locationWhenInUsePermission": "This app needs access to your location to show nearby restaurants and calculate delivery times.",
          "isIosBackgroundLocationEnabled": false,
          "isAndroidBackgroundLocationEnabled": false
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#007aff",
          "defaultChannel": "default",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "08bd6b92-2717-47f7-b11c-ed37f5126c0e"
      },
      "API_BASE_URL": "https://your-backend.example.com"
    },
    "owner": "mr_calculus"
  }
}
